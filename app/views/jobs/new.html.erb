<div class="main">
  <div class="sidebar">
    <div class="block">
      <h3>Jobs</h3>
      <ul>
        <li><a href="#">Create New Job</a></li>
      </ul>
    </div>
    <div class="block">
      <h3>Status</h3>
      <dl class="stats">
        <dt>All</dt>
        <dd><a href="#">11</a></dd>
        <dt>Active</dt>
        <dd><a href="#">4</a></dd>
        <dt>Inactive</dt>
        <dd><a href="#">2</a></dd>
        <dt>On Hold</dt>
        <dd><a href="#">1</a></dd>
        <dt>Complete</dt>
        <dd><a href="#">4</a></dd>
    </div>
  </div>
  <div class="content">
    <%=image_tag("heading_jobs.png", :class => "heading")%>
    <div class="breadcrumbs">
      <ul>
        <li><a href="/">Dashboard</a><span class="separator">/</span></li>
        <li><a href="#">Jobs</a><span class="separator">/</span></li>
        <li><a href="#">Add New Job</a></li>
      </ul>
    </div>
    <div class="block">
      <%= form_for @job do |f|%>
        <% if @job.errors.any? %>
        <div id="errorExplanation">
          <h2><%= pluralize(@job.errors.count, "error") %> prohibited
              this post from being saved:</h2>
          <ul>
          <% @job.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
        <% end %>
        <h2>Customer Information</h2>
        <dl>
          <dt>Customer Name</dt>
          <dd><%= f.text_field :customer_name %></dd>
          <dt>Address</dt>
          <dd><%= f.text_field :address%></dd>
          <dt>City</dt>
          <dd><%= f.text_field :city%></dd>
          <dt>State</dt>
          <dd>
          <%= f.select :state, options_for_select(['Ohio'])%>
          </dd>
          <dt>Zip Code</dt>
          <dd><%= f.text_field :zip_code%></dd>
          <dt>Phone Number</dt>
          <dd><%= f.text_field :phone %></dd>
          <dt>Email Address</dt>
          <dd><%= f.text_field :email %></dd>
        </dl>
        <h2>Claim Information</h2>
        <dt>Insurance Company</dt>
        <dd>
          <%= f.select :insurance_company, options_for_select(['State Farm Insurance'])%>
          <span class="form_details"><a href="#">Add New</a><input type="text"><input type="submit" value="Add"></span>
        </dd>
        <dt>Adjuster</dt>
        <dd>
        <%= f.select :adjuster, options_for_select(['Steve Jobs'])%>
          <span class="form_details"><a href="#">Add New</a><input type="text"><input type="submit" value="Add"></span>
        </dd>
        <dt>Claim Number</dt>
        <dd><%= f.text_field :claim_number%></dd>
        <dt></dt>
        <dd><%= f.submit%>
      <% end %>
    </div>
  </div>
</div>


