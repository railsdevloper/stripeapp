<body class="narrow">

<div class="main">
  <div class="content">
    <%= image_tag("heading_signin.png", :class => "heading") %>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <fieldset>
        <dl>
          <dt><label>Email Address</label></dt>
          <dd><%= f.email_field :email %></dd>
          <dt><label>Password</label></dt>
          <dd><%= f.password_field :password %></dd>
          <dt></dt>
          <dd><%= f.submit "Sign In" %></dd>
        </dl>
      </fieldset>
    <% end %>
  </div>
</div>

</body>
