.main
  .sidebar
    .block
      %h3 Billing
      %ul
        %li
          %a{:href => "#"} Transactions
        %li
          %a{:href => "#"} Payment Info
        %li
          = link_to "Plan Info", plan_info_billings_path(current_subscription.username)
        %li
          %a{:href => "#"} Cancel Subscription
  .content
    = image_tag("heading_billing.png", :class => "heading")
    .breadcrumbs
      %ul
        %li
          %a{:href => "#"} Dashboard
          %span.separator /
        %li
          %a{:href => "#"} Billing
          %span.separator /
        %li
          %a{:href => "#"} Plan Information
    .block
      %h2
        Plan Information
        %span.heading_nav
          = link_to 'Edit', plan_edit_billing_path(current_subscription.username, @subscription)
      -#%p Your plan has been updated. We have charged your card the $x difference.
      %dl
        %dt Plan
        %dd= @subscription.plan.try(:name)
        %dt Monthly Fee
        %dd
          $
          ="%.2f" % @subscription.plan.try(:price)
        %dt Payment Date
        %dd= "#{@subscription.created_at.strftime("%d").try(:to_i).try(:ordinalize)} of every month"
